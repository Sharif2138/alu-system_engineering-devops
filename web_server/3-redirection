#!/usr/bin/env bash
# This script configures a new Ubuntu machine to perform a permanent redirect to a specified URL

# Update the package list
sudo apt-get update

# Install Nginx
sudo apt-get install -y nginx

# Configure Nginx to add a redirect rule for /redirect_me
echo "server {
    listen 80;
    server_name _;
    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}" | sudo tee /etc/nginx/sites-available/redirect_config > /dev/null

# Link the configuration file to sites-enabled
sudo ln -sf /etc/nginx/sites-available/redirect_config /etc/nginx/sites-enabled/default

# Test Nginx configuration to ensure there are no errors
sudo nginx -t

# Restart Nginx to apply the changes
sudo service nginx restart


